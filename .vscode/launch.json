{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Compilar C",
            "command": "gcc",
            "args": [
                "-g",
                "-Wall",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always"
            }
        }
    ]
}